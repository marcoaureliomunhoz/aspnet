@model WebApp.ViewModels.AutorViewModel

@{
    ViewBag.Title = "Altera Autor";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li>@Html.ActionLink("Autores", "Index", "Autores")</li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(x => x.AutorId)
                @Html.TextBoxFor(x => x.AutorId, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Nome)
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "true" })
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        }
    </div>
</div>